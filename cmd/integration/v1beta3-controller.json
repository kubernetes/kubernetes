{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
     "name": "nginx-controller",
     "labels": {"name": "nginx"}
  },
  "spec": {
    "replicas": 2,
    "selector": {"name": "nginx"},
    "template": {
       "metadata": {
          "labels": {"name": "nginx"}
       },
       "spec": {
           "containers": [{
             "name": "nginx",
             "image": "nginx",
             "ports": [{"containerPort": 80}]
           }]
       }
    }
  }
}
