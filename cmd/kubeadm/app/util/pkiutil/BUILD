        "//staging/src/k8s.io/client-go/util/cert:go_default_library",
    ],
)

go_library(
    name = "go_default_library",
    srcs = ["pki_helpers.go"],
    importpath = "k8s.io/kubernetes/cmd/kubeadm/app/util/pkiutil",
    deps = [
        "//cmd/kubeadm/app/apis/kubeadm:go_default_library",
