{
    "acKind": "PodManifest",
    "acVersion": "0.8.9",
    "apps": [
        {
            "name": "reduce-worker",
            "image": {
                "name": "example.com/reduce-worker",
                "id": "sha512-8d3fffddf79e9a232ffd19f9ccaa4d6b37a6a243dbe0f23137b108a043d9da13121a9b505c804956b22e93c7f93969f4a7ba8ddea45bf4aab0bebc8f814e0990"
            },
            "app": {
                "exec": [
                    "/usr/bin/reduce-worker",
                    "--debug=true",
                    "--data-dir=/mnt/foo"
                ],
                "group": "0",
                "user": "0",
                "mountPoints": [
                    {
                        "name": "database",
                        "path": "/var/lib/db"
                    }
                ],
                "isolators": [
                    {
                        "name": "resource/memory",
                        "value": {"limit": "1G"}
                    }
                ]
            },
            "mounts": [
                {
                    "volume": "dbvolume",
                    "path": "/var/lib/db"
                }
            ]
        },
        {
            "name": "backup",
            "image": {
                "name": "example.com/worker-backup",
                "id": "sha512-d603c29df0214c9b6681ed591871d40cc4bfabf9914383ce95ada0f2333defa7e97e21ca347e1d8dfde0b3edfe703688729cd25cec895a9a5b5c856da2f031fe",
                "labels": [
                    {
                        "name": "version",
                        "value": "latest"
                    }
                ]
            },
            "mounts": [
                {
                    "volume": "dbvolume",
                    "path": "/mnt/db"
                },
                {
                    "volume": "buildoutput",
                    "path": "/mnt/out"
                }
            ],
            "annotations": [
                {
                    "name": "foo",
                    "value": "baz"
                }
            ]
        },
        {
            "name": "register",
            "image": {
                "name": "example.com/reduce-worker-register",
                "id": "sha512-57007df523db8aa55e11260aaaab5e8242eb7a2a431196da7ba8204c4aacc6215db289242d17e5a5e45cb0cd0c2e22c7be9c77b61401a8f7e3eba66c2e6e42eb",
                "labels": [
                    {
                        "name":  "version",
                        "value": "3.0.0"
                    }
                ]
            }
        }
    ],
    "volumes": [
        {
            "name": "dbvolume",
            "kind": "host",
            "source": "/opt/tenant1/database",
            "readOnly": true
        },
        {
            "name": "buildoutput",
            "kind": "empty",
            "mode": "0777",
            "uid": 0,
            "gid": 0
        }
    ],
    "isolators": [
        {
            "name": "resource/memory",
            "value": {"limit": "4G"}
        },
        {
            "name": "os/unix/sysctl",
            "value": {
                "net.ipv4.tcp_fin_timeout": "6"
            }
        }
    ],
    "annotations": [
        {
            "name": "ip-address",
            "value": "10.1.2.3"
        }
    ]
}
