{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pod-uses-shared-hdd-5g",
        "labels": {
            "name": "storage"
        }
    },
    "spec": {
        "containers": [
            {
               "image": "nginx",
                "name": "az-c-01",
                "command": [
                    "/bin/sh",
                    "-c",
                    "while true; do echo $(date) >> /mnt/blobdisk/outfile; sleep 1; done"
                ],
                "volumeMounts": [
                    {
                        "name": "blobdisk01",
                        "mountPath": "/mnt/blobdisk"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "blobdisk01",
                "persistentVolumeClaim": {
                    "claimName": "pv-dd-shared-hdd-5g"
                }
            }
        ]
    }
}
