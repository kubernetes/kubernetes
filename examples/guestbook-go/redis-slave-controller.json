{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis-slave",
      "labels":{
         "app":"redis",
         "role":"slave"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"redis",
         "role":"slave"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"redis",
               "role":"slave"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-slave",
                  "image":"gcr.io/google_samples/gb-redisslave:v1",
                  "ports":[
                     {
                        "name":"redis-server",
                        "containerPort":6379
                     }
                  ],
                  "env":[
                     {
                        "name": "GET_HOSTS_FROM",
                        "value": "dns"
                     }
                  ]
               }
            ]
         }
      }
   }
}
