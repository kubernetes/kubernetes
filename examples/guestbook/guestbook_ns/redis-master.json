{
    "apiVersion": "v1beta3",
    "kind": "Pod",
    "id": "redis-master",
    "metadata": {
        "name": "redis-master",
        "labels": {
            "name": "redis-master"
        }
    },
    "spec": {
        "volumes": null,
        "resources": {},
        "containers": [
            {
                "name": "master",
                "image": "dockerfile/redis",
                "ports": [
                    {
                        "containerPort": 6379,
                        "hostPort": 6379,
                        "protocol": "TCP"
                    }
                ]
            }
        ],
        "restartPolicy": {
            "always": {}
        }
    }
}

