# Test CertificateSigningRequest (CSR) approval and denial

####################
# CSR Approval Tests
####################

# Test: Approve CSR by name
# Create CSR
kubectl create -f hack/testdata/csr.yml
stdout 'certificatesigningrequest.certificates.k8s.io/foo created'

# Pre-condition: CSR has no status conditions yet
kubectl get csr/foo -o jsonpath='{range.status.conditions}{.type}{end}'
! stdout 'Approved'
! stdout 'Denied'

# Approve the CSR by name
kubectl certificate approve foo
stdout 'certificatesigningrequest.certificates.k8s.io/foo approved'

# Verify the approval was recorded (check for Approved condition in YAML output)
kubectl get csr/foo -o yaml
stdout 'type: Approved'

# Verify CSR appears in list
kubectl get csr -o json
stdout 'foo'

# Cleanup
kubectl delete -f hack/testdata/csr.yml
stdout 'certificatesigningrequest.certificates.k8s.io "foo" deleted'

# Verify CSR is deleted
kubectl get csr -o jsonpath='{range.items}{.metadata.name}{end}'
! stdout 'foo'

# Test: Approve CSR by file
kubectl create -f hack/testdata/csr.yml
stdout 'certificatesigningrequest.certificates.k8s.io/foo created'

# Pre-condition: CSR has no status conditions
kubectl get csr/foo -o jsonpath='{range.status.conditions}{.type}{end}'
! stdout 'Approved'

# Approve the CSR using -f flag
kubectl certificate approve -f hack/testdata/csr.yml
stdout 'certificatesigningrequest.certificates.k8s.io/foo approved'

# Verify the approval was recorded (check for Approved condition in YAML output)
kubectl get csr/foo -o yaml
stdout 'type: Approved'

# Verify CSR appears in list
kubectl get csr -o json
stdout 'foo'

# Cleanup
kubectl delete -f hack/testdata/csr.yml
stdout 'certificatesigningrequest.certificates.k8s.io "foo" deleted'

# Verify CSR is deleted
kubectl get csr -o jsonpath='{range.items}{.metadata.name}{end}'
! stdout 'foo'

