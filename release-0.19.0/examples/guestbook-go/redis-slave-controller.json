{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "id":"redis-slave",
   "metadata":{
      "name":"redis-slave",
      "labels":{
         "name":"redis",
         "role":"slave"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "name":"redis",
         "role":"slave"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"redis",
               "role":"slave"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-slave",
                  "image":"gurpartap/redis",
                  "command":[
                     "sh",
                     "-c",
                     "redis-server /etc/redis/redis.conf --slaveof redis-master 6379"
                  ],
                  "ports":[
                     {
                        "name":"redis-server",
                        "containerPort":6379,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}
