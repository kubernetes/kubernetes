version: v1beta2
id: fluentd-to-gcp
containers:
  - name: fluentd-gcp-container
    image: kubernetes/fluentd-gcp:1.2
    volumeMounts:
      - name: containers
        mountPath: /var/lib/docker/containers
      - name: varlog
        mountPath: /varlog
volumes:
  - name: containers
    source:
      hostDir:
        path: /var/lib/docker/containers
  - name: varlog
    source:
      hostDir:
        path: /var/log
